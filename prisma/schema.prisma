// schema.prisma
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int       @default(autoincrement()) @id
  name          String?
  email         String?   @unique
  createdAt     DateTime  @default(now()) @map(name: "created_at")
  updatedAt     DateTime  @updatedAt @map(name: "updated_at")
  @@map(name: "users")
}

model Project {
  id            Int       @default(autoincrement()) @id
  name          String
  code          String
  plans         String
  specification String
  trades        Trade[]
}

model Trade {
  id            Int       @default(autoincrement()) @id
  code          Int       @unique
  name          String
  project       Project    @relation(fields: [projectId], references: [id])
  projectId     Int        
}

model Parameters {
  id            Int       @default(autoincrement()) @id
  estimateValue Int
  contractValue Int
  subName       String
  subAcceptance Boolean
  subQuote      String
}

model SubContractor {
  id            Int       @default(autoincrement()) @id
  code          Int
  name          String
  estimateValue Int
  contractValue Int
  subAcceptance String
  subQuote      String
}